<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonia="https://github.com/projektanker/icons.avalonia">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="TreeDataGridColumnHeader">
        <Setter Property="Padding" Value="8,8,8,4"/>
    </Style>
    
    <Style Selector="TreeDataGridColumnHeader NumericUpDown">
        <Setter Property="Padding" Value="5"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="TreeDataGridColumnHeader Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="5"/>
    </Style>
    
    <Style Selector="TreeDataGridTemplateCell">
        <Setter Property="Padding" Value="4"/>
    </Style>
    
    <Style Selector="TreeDataGridTemplateCell Button">
        <Setter Property="MinHeight" Value="0"/>
    </Style>
    
    <Style Selector="TreeDataGridTemplateCell avalonia|Icon">
        <Setter Property="FontSize" Value="18"/>
    </Style>
</Styles>
